<!DOCTYPE html>
<html lang="en">

<%- include("../../layout/head")%>


  <body>

    <%- include("../../layout/header")%>


      <div class="show">
        <h1>Show Books Results</h1>
      </div>
      <main class="main">
        <% booksResults.forEach(data=>{ %>
          <section>
            <div class="img-outer">
              <img src="<%=data.img%>" alt="">
            </div>
            <div class="inside">
              <div class="title">
                <h3>
                  <%=data.bookTitle%>
                </h3>
              </div>

              <div class="author">
                <h5>
                  <%=data.authorNames%>
                </h5>
              </div>

              <div class="pr">
                <p>
                  <%=data.description%>
                </p>
              </div>
            </div>
            <form action="/books" method="POST">
              <input type="text" hidden name="img" value="<%=data.img%>">
              <input type="text" hidden name="title" name="searchBy" value="<%=data.bookTitle%>">
              <input type="text" hidden name="author" value="<%=data.authorNames%>">
              <input type="text" hidden name="description" value="<%=data.description%>">

              <div class="btn">
                <button type="submit">Select this Book</button>
              </div>
            </form>
          </section>
          <% }) %>
      </main>

      <%- include("../../layout/footer")%>

  </body>

</html>