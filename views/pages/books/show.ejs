<!DOCTYPE html>
<html lang="en">

<%- include("../../layout/head")%>

    <body>
        <%- include("../../layout/header")%>
            <main class="main">
                <section class="details">
                    <%- include('./detail')%>
                        <!-- <div class="pr"> -->
                        <p id="para">
                            <%= book.description %>
                        </p>
                        </div>
                        <div>
                            <div>
                                <button class="update-button" type="submit">Update Details</button>
                            </div>
                            <form action="/books/<%= book.id %>?_method=DELETE" method="POST">
                                <input type="text" hidden hidden name="img" value="<%=book.image_url%>">
                                <input type="text" hidden name="title" name="searchBy" value="<%=book.title%>">
                                <input type="text" hidden name="author" value="<%=book.author%>">
                                <input type="text" hidden name="description" value="<%=book.description%>">
                                <button class="delete-button" type="submit">Delete Book</button>
                            </form>
                        </div>
                        <div> <a class="a-btn" href="/">Home</a></div>
                </section>
                <%- include("edit") %>
            </main>
            <%- include("../../layout/footer")%>

                <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
                <script>
                    $(".update-button").click(() => {
                        $(".update").toggle();
                        $(".details").toggle();
                    })
                    $(".cancel").click(() => {
                        $(".details").toggle();
                        $(".update").toggle();
                    })
                </script>
    </body>

</html>